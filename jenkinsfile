pipeline { 
    // run on any agent
    agent any
    // Set builds to trigger on a timer
    triggers {
        // poll repo every 5 minutes for changes
        pollSCM('*/2 * * * *')
    }
    // save only the last 10 builds
    options { buildDiscarder(logRotator(numToKeepStr: '10')) }
//
// Main build stages
//
    stages {
        stage('check directory') {
            steps {
                sh "pwd";
                sh "ls -l";
            }
        }
        stage('Publish jar file...') {
            steps {
               aws cloudformation create-stack --stack-name myteststack --template-url "file://template.yaml"
            }
        }
        

    }
}

